<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/lblCurDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp" />

    <!--<TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back" >-->
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:padding="5dp">
        <!--<TableRow>-->

            <TextView
                android:text="@string/lblCash"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtWidth"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="top|start"/>

            <!--<Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/lblCashSum"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtSmallWidth"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="top|start"/>
        <!--</TableRow>

        <TableRow>-->

            <TextView
                android:text="@string/lblExpenditure"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtWidth"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="top|start"/>

            <!--<Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/lblExpenditureSum"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtSmallWidth"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="top|start"/>
        <!--</TableRow>

        <TableRow>-->

            <TextView
                android:text="@string/lblTotal"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtWidth"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="top|start"/>

            <!--<Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/lblTotalSum"
                android:textSize="@dimen/text_size"
                android:width="@dimen/txtSmallWidth"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="top|start"/>
        <!--</TableRow>
    </TableLayout>-->
    </GridLayout>
</LinearLayout>
