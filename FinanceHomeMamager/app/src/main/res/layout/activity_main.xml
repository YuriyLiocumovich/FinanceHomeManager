        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <GridLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="top|start"
                android:textSize="@dimen/text_size"
                android:text="@string/lblMainCurMonthTotal"/>
            <Space android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="top|start"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="top|start"
                android:textSize="@dimen/text_size"
                android:id="@+id/lblMainCurMonthTotal"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="top|start"
                android:textSize="@dimen/text_size"
                android:text="@string/lblMainTotal"/>
            <Space android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="top|start"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="top|start"
                android:textSize="@dimen/text_size"
                android:id="@+id/lblMainTotal"/>
        </GridLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnCash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:onClick="bntCashClick"
                android:text="@string/btnCash"
                android:textSize="@dimen/text_size" />

            <Space
                android:layout_width="5dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnCredCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:onClick="btnCredCardClick"
                android:text="@string/btnCredCard"
                android:textSize="@dimen/text_size" />

            <Space
                android:layout_width="5dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_back"
                android:onClick="btnCheckClick"
                android:text="@string/btnCheck"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

